<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/activity_splash_signin"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/root_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/lightGray"/>
            <!--android:scaleType="centerCrop"-->
            <!--android:src="@drawable/bg_main"/>-->

        <LinearLayout
            android:id="@+id/loader_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                style="@style/CustomMediumTextStyle"
                android:text="שלום לקוח יקר! \n אנא מלא פרטים על מנת להירשם"/>

            <EditText
                android:id="@+id/signin_et_business_name"
                style="@style/WhiteEditText"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:inputType="textPersonName"
                android:hint="הזן את שם העסק"
                android:ems="10"/>

            <EditText
                android:id="@+id/signin_et_account_number"
                style="@style/WhiteEditText"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:inputType="textPersonName"
                android:hint="הזן מספר חשבון"
                android:ems="10"/>

            <EditText
                android:id="@+id/signin_et_branch_number"
                style="@style/WhiteEditText"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:inputType="textPersonName"
                android:hint="הזן מספר סניף"
                android:ems="10"/>

            <Button
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:text="GO"
                android:layout_marginBottom="100dp"/>

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--style="@style/CustomMediumTextStyle"-->
                <!--android:text="טוען נתונים"/>-->

            <!--<ProgressBar-->
                <!--android:id="@+id/progressBar"-->
                <!--style="?android:attr/progressBarStyle"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"/>-->

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>


