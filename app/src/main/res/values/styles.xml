<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- Base application theme. -->
    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WhiteEditText">
        <item name="android:textColor">@color/lightGray</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:background">@drawable/white_et_shape</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:gravity">right|center_vertical</item>
    </style>

    <style name="CustomTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomSmallTextStyle" parent="CustomTextStyle">
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="CustomMediumTextStyle" parent="CustomTextStyle">
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="CustomBigTextStyle" parent="CustomTextStyle">
        <item name="android:textSize">@dimen/big_text_size</item>
    </style>

    <style name="MainBtn" parent="CustomMediumTextStyle">
        <item name="android:background">@color/colorPrimary</item>
    </style>

</resources>
