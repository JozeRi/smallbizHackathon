<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="CustomTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomSmallTextStyle" parent="CustomTextStyle">
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="CustomMediumTextStyle" parent="CustomTextStyle">
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="CustomBigTextStyle" parent="CustomTextStyle">
        <item name="android:textSize">@dimen/big_text_size</item>
    </style>

    <style name="MainBtn" parent="CustomMediumTextStyle">
        <item name="android:background">@color/colorPrimary</item>
    </style>

</resources>
